<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/icon_home_new"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_camera_black_24dp" />

        <TextView
            android:id="@+id/text_home_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="New Styles"
            android:textColor="@color/colorBlack75"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_new1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/newstyle1" />

        <ImageView
            android:id="@+id/img_new2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/newstyle2" />

        <ImageView
            android:id="@+id/img_new3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/newstyle3" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/icon_home_de"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_update_black_24dp" />

        <TextView
            android:id="@+id/text_home_de"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Still Need It?"
            android:textColor="@color/colorBlack75"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_home_de_1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/de1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_home_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorBlack75"
                android:text="Haven't check it for a long time." />

            <TextView
                android:id="@+id/text_home_de_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Add Date: 04/23/2017" />

            <!--<TextView-->
                <!--android:id="@+id/text_home_de_2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:text="Check Date: 06/20/2017" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_joy"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:background="#e0e0e0"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Spark JOY" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:textColor="#fff"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="@color/colorAccent"
                    android:text="I'm Done" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_home_de_2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/de3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_home_noti2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorBlack75"
                android:text="Haven't check it for a long time." />

            <TextView
                android:id="@+id/text_home_de2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Add Date: 04/23/2017" />

            <!--<TextView-->
                <!--android:id="@+id/text_home_de2_2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:text="Check Date: 06/20/2017" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_joy2"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:background="#e0e0e0"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Spark JOY" />

                <Button
                    android:id="@+id/btn_delete2"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:textColor="#fff"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="@color/colorAccent"
                    android:text="I'm Done" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginBottom="4dp"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_home_de_3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/de2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_home_noti3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorBlack75"
                android:text="Haven't check it for a long time." />

            <TextView
                android:id="@+id/text_home_de3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Add Date: 04/23/2017" />

            <!--<TextView-->
                <!--android:id="@+id/text_home_de3_2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:text="Check Date: 06/20/2017" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_joy3"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:background="#e0e0e0"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Spark JOY" />

                <Button
                    android:id="@+id/btn_delete3"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:textColor="#fff"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="@color/colorAccent"
                    android:text="I'm Done" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
