<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">

        <ImageView
            android:id="@+id/img_home_de"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/de3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/text_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="You haven't check it for a long time."
                android:textSize="20sp" />

            <!--<TextView-->
            <!--android:id="@+id/text_home_de_1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:text="Add Date: 04/23/2017" />-->

            <!--<TextView-->
            <!--android:id="@+id/text_home_de_2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:text="Check Date: 06/20/2017" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--#81C784-->
                <Button
                    android:id="@+id/btn_keep"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:onClick="keepCloth2"
                    android:text="Keep it" />

                <!--@color/colorWhite70-->
                <Button
                    android:id="@+id/btn_think"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:onClick="thinkCloth2"
                    android:text="Think" />

                <!--#E57373-->
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:onClick="deleteCloth2"
                    android:text="I'm Done" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
